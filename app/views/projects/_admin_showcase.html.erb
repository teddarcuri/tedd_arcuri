<div class="showcase admin-showcase showcase-hide">

	<h1>New Project</h1>

	<%= form_for :project, url: projects_path, :html => { :multipart => true } do |f| %>

		<h2>Name</h2>
		<%= f.text_field :name %><br />

		<h2>Kind</h2>
		<%= f.select(:kind, options_for_select([['Logo', 'logo'], ['Web', 'web'], ['Illustration', 'illustration']]) ) %>

		<h2>Order</h2>
		<%= f.number_field :order %><br />

		<h2>Description</h2>
		<%= f.text_area :description %><br />

		<h2>Preview Image</h2>
		<%= f.file_field :image %>
		<hr>

		<h2>Gallery Images</h2>
		<%= f.fields_for :assets do |asset| %>
			<%= asset.file_field :image %>
		<% end %>

		<%= f.submit("Create a project", :class => "login-btn") %>

	<% end %>

	<div class="showcase-close"><h3>X</h3></div>
</div>	