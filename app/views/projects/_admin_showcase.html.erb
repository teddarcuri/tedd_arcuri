<div class="showcase admin-showcase showcase-hide">

	<h1>New Project</h1>

	<%= form_for :project, url: projects_path, :html => { :multipart => true } do |f| %>

		<h2>Name</h2>
		<%= f.text_field :name %><br />

		<h2>Kind</h2>
		<%= f.select(:kind, options_for_select([['Logo', 'Logo'], ['Web', 'Web']]) ) %>

		<h2>Order</h2>
		<%= f.number_field :order %><br />

		<h2>Description</h2>
		<%= f.text_area :description %><br />

		<h2>Upload file</h2>
		<%= f.file_field :image %>

		<%= f.submit("Create a project", :class => "login-btn") %>

	<% end %>

	<div class="showcase-close"><h3>X</h3></div>
</div>	