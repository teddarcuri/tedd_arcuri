<div class="gallery">
	<div class="showcase-close"><h3>X</h3></div>
	<div class="slideshow">
		<% if @project.assets %>
			<% @project.assets.each do |asset| %>
				<div>
					<%= image_tag asset.image.url %>
				</div>
			<% end %>
		<% end %>
	</div>
</div>

<div class="sidebar">
	<h1><%= @project.name %></h1>
	<h4><%= @project.kind %></h4>
	<div class="myrole"><%= @project.myrole %></div> 

	<% if @project.description? %>
	<section class="about">
		<h2>Project Overview</h2>
		<div>
			<p><%= raw @project.description %></p>
		</div>
	</section>
	<% end %>	

	<% if @project.features? %>
	<section class="about">
		<h2>Key Features</h2>
		<div>
			<p><%= raw @project.features %></p>
		</div>
	</section>
	<% end %>	

	<% if @project.technologies? %>
	<section class="about">
		<h2>Technologies</h2>
		<div>
			<p><%= raw @project.technologies %></p>
		</div>
	</section>
	<% end %>

	<% if @project.siteurl? %>
		<center>
			<a target="_blank" href="<%= @project.siteurl %>" class="button-lrg">View the site</a>
		</center>
	<% end %>
</div>
