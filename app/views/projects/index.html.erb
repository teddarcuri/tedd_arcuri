<!-- The main container | App -->
<div class="container">

	<div class="control-bar">
		<h1>My Work</h1>
		<div class="controls">
			<a class="button admin-showcase-toggle">New Project</a>
			<a href="" class="button">Web</a>
			<a href="" class="button">Logo</a>
			<a href="" class="button">Print</a>
		</div>
	</div>
	

	<div class="projects-container">
		<!-- <div class="project featured">
			<div class="project-photo"></div>
			<div class="toolbar">
				<a class="view-project"></a>
				<a>Featured Project</a>
			</div>
		</div> -->

		<% @projects.each do |project| %>
		<div id="<%= dom_id(project) %>" class="project">
			<div class="project-photo" style="background: url(<%= project.image.url %>) no-repeat top center">
				<div class="project-info">
					<h2><%= project.name %></h2>
					<hr>
					<p><%= project.description %></p>
					<%= link_to "View More", projects_path, class: "button" %>
				</div>
			</div>
			<div class="toolbar">
				<a class="view-project"></a>
				<a><%= project.name %></a>
				<%= link_to "Edit", edit_project_path(:id => project.id) %>
				<%= link_to "", project_path(:id => project.id), method: :delete, :class => "delete-project" %>
			</div>
		</div>
		<% end %>
	</div>
</div>
	
<div class="showcase admin-showcase showcase-hide">

	<h1>New Project</h1>

	<%= form_for :project, url: projects_path, :html => { :multipart => true } do |f| %>

		<h2>Name</h2>
		<%= f.text_field :name %><br />
		<h2>Languages</h2>
		<%= f.text_field :languages %><br />
		<h2>Description</h2>
		<%= f.text_area :description %><br />
		<h2>Upload file</h2>
		<%= f.file_field :image %>

		<%= f.submit("Create a project") %>

	<% end %>

	<div class="showcase-close"><h3>X</h3></div>
</div>	