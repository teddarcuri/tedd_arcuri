<div class="container">
	<h1>New User</h1>

	<%= form_for @user, url: users_path do |f| %>
		<%= f.label :username %><br />
		<%= f.text_field :username %><br />
		<%= f.label :password %><br />
		<%= f.text_field :password %><br />
		<%= f.label :password_confirmation %><br />
		<%= f.text_field :password_confirmation %><br />
		

		<%= f.submit("Create a user") %>

	<% end %>
</div>	
	