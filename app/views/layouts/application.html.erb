<!DOCTYPE html>
<html>
<head>
  <title>Tedd Arcuri | Web Designer/Developer</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <!-- Typekit Fonts -->
  <script type="text/javascript" src="//use.typekit.net/tdf6ubl.js"></script>
  <script type="text/javascript">try{Typekit.load();}catch(e){}</script>

  <%= csrf_meta_tags %>
</head>
<body>

<% if !flash[:success].blank? %>
	<div class="notice success">
		<%= flash[:success] %>
	</div>	
<% end %>

<nav>
	<%= link_to " ", root_path, class: "logo" %>
	<ul class="navigation">
		<li><%= link_to "Me, The Person", {controller: "pages", action: "about"} %></li>
		<li><%= link_to "My Work", projects_path %></li>
		<li><%= link_to "Contact", {controller: "pages", action: "contact"} %></li>
		<% if logged_in %>
		<li><%= link_to "Logout", user_session_path(id: current_user_id), method: :delete %></li>
		<% end %>
	</ul>

	<ul class="social">
		<li class="social-icon github"></li>
		<li class="social-icon twitter"></li>
		<li class="social-icon linkedin"></li>
	</ul>
</nav>

<%= yield %>


<script>

  	  $(".headline").fitText();
	  $(".name").fitText(0.3);

		$(function(){
		    $(".headline").typed({
		    	strings: ["Hello, my name is"],
		    	typeSpeed: 100
		    });
		});

	</script>
</body>
</html>
